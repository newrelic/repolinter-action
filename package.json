{
  "name": "repolinter-action",
  "version": "1.6.5",
  "private": true,
  "description": "GitHub action to automatically enforce open source policies using Repolinter",
  "main": "lib/entry.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts __tests__/**/*.ts --fix",
    "package": "ncc build --source-map --minify",
    "test": "jest",
    "release": "semantic-release",
    "all": "npm run format && npm run lint && npm run build && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/todogroup/repolinter-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Noah Koontz (noah@koontzs.com)",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@octokit/action": "^3.10.4",
    "@octokit/plugin-retry": "^3.0.9",
    "@octokit/rest": "^18.6.2",
    "@octokit/types": "^6.16.6",
    "@types/js-yaml": "^4.0.1",
    "@types/node-fetch": "^2.5.10",
    "node-fetch": "^2.6.1",
    "repolinter": "^0.11.1"
  },
  "devDependencies": {
    "@octokit/request-error": "^2.1.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "@vercel/ncc": "^0.28.6",
    "eslint": "^7.29.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.5",
    "jest-circus": "^27.0.5",
    "js-yaml": "^4.1.0",
    "nock": "^13.1.0",
    "prettier": "2.3.1",
    "prettier-plugin-jsdoc": "^0.3.23",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4"
  }
}
